document.getElementById("rsvpForm").addEventListener("submit", function(e){
    e.preventDefault();

    const name = document.getElementById("name").value;
    const phone = document.getElementById("phone").value;
    const email = document.getElementById("email").value;
    const age = document.getElementById("age").value;
    const haircut = document.getElementById("haircut").value;

    const subject = encodeURIComponent("Haircut Booking Request");
    const body = encodeURIComponent(
        `Name: ${name}\nPhone: ${phone}\nEmail: ${email}\nAge: ${age}\nRequested Haircut: ${haircut}`
    );

    // Open Gmail compose window with prefilled content
    window.open(`mailto:aryamanvbijja@gmail.com?subject=${subject}&body=${body}`);

    document.getElementById("confirmation").innerText = "Your booking email is ready to send!";
    document.getElementById("rsvpForm").reset();
});

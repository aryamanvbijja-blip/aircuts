    <!-- JavaScript for Form Submission Handling -->
    <script>
        const form = document.getElementById('booking-form');
        const successMessage = document.getElementById('success-message');

        form.addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(form);
            const encodedData = new URLSearchParams(formData).toString();

            fetch("/", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: encodedData
            })
            .then(() => {
                // Show the custom confirmation message
                successMessage.classList.remove('hidden');
                // Reset the form fields
                form.reset();
            })
            .catch(error => {
                // Fallback message for failure (or simple console log)
                console.error('Form submission failed:', error);
                // Note: Netlify usually handles client-side errors gracefully,
                // but a deployment error could cause this.
            });
        });

        // Ensure the initial scroll position is handled for hash links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
